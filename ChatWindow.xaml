<Window x:Class="Chatbot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberSecurity Chatbot" Height="400" Width="600"
        Background="#1E1E2F" Foreground="White">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Welcome to CyberSecurity Chatbot" FontSize="20" FontWeight="Bold" Margin="0 0 0 20" TextAlignment="Center"/>

            <Button Content="💬 Chat" Height="40" Margin="0 0 0 10" Click="ChatButton_Click"/>
            <Button Content="ℹ️ About" Height="40" Margin="0 0 0 10" Click="AboutButton_Click"/>
            <Button Content="❌ Exit" Height="40" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
